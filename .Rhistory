rank_public == nrow(country_summary) ~ "the lowest",
TRUE ~ "in the middle range"
)
private_position <- dplyr::case_when(
rank_private == 1 ~ "the highest",
rank_private == nrow(country_summary) ~ "the lowest",
TRUE ~ "in the middle range"
)
} else {
